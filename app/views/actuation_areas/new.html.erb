<h1>Criar área de atuação</h1>

<%= form_with(model: @actuation_area) do |f| %>
  <div class="form-m-w-content">
    <div class="mb-4">
      <%= f.label :name, 'Área de Atuação',class: "form-label" %>
      <%= f.text_field :name, class: "form-text-field" %>

      <% @actuation_area.errors.full_messages_for(:name).each do |message| %>
        <div class="mt-1 text-red-500"><%= message %></div>
      <% end %>
    </div>

    <%= f.submit 'Salvar', class: "form-submit-button" %>
  </end>
<% end %>

