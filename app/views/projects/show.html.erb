
      <div class="max-w-xs sm:max-w-lg mx-auto mt-8 text-center rounded overflow-hidden shadow-lg p-4 border-solid border-2 border-blue-800">
        <div class="flex justify-between border-b-2 border-gray-400">   
          <h4 class="text-gray-800 text-md font-bold mb-2 text-left">
            <%= @project.title %>
          </h4>
          
          <div>
            <%= number_to_currency @project.max_payment_hour %>
          </div>
        </div>
        
        <div class="text-gray-800 text-sm font-medium my-2 text-justify">
          <%= @project.description %>
        </div>
      
      <div class="text-gray-800 text-sm font-medium mb-2 text-justify">
        Habilidades: <%= @project.skills %>
      </div>
    
      <div class="text-gray-800 text-sm font-medium mb-2 text-justify">
        Remoto:
        <% if @project.remote? %>
          Sim
        <% else %>
          Não
        <% end %>
      </div>
    
      <div class="text-gray-800 text-sm font-medium mb-2 text-justify">
        Aplicar até: <%= l @project.limit_bid_date %>
      </div>
    
  <div class="border-t-2 border-gray-400 pt-2">
  <%= form_with(model: @proposal, url: proposals_path) do |f| %>
  <%= f.label :resume, 'Por que quero participar do projeto', class: 'form-label' %>
  <%= f.text_area :resume, class: 'form-text-field' %>
  <%= f.label :payment_hour, 'Valor da hora de trabalho', class: 'form-label' %>
  <%= f.number_field :payment_hour, class: 'form-text-field' %>
  <%= f.label :week_hours, 'Quantidade de horas por semana', class: 'form-label' %>
  <%= f.number_field :week_hours, class: 'form-text-field' %>
  <%= f.label :conclusion_date, 'Data de conclusão', class: 'form-label' %>
  <%= f.date_field :conclusion_date, class: 'form-text-field' %>
  <%= f.submit 'Enviar Proposta', class: 'form-submit-button mt-4' %>
  </div>
<% end %>
</div>
